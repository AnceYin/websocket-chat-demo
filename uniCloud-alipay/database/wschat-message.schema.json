		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"sender": {
			"bsonType": "string",
			"description": "消息发送者"
		},
		"sessionId": {
			"bsonType": "string",
			"description": "会话ID"
		},
